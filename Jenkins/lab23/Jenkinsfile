pipeline {
    agent any

    environment {
        DOCKER_HUB_REPO = "abdallah1312/ivolve"
        DOCKER_CREDENTIALS = "Docker-cred"
        KUBERNETES_DEPLOYMENT_FILE = "deployment.yaml"
        DOCKER_IMAGE_NAME = "ivolve"
        KUBECONFIG = "/home/abdallah/.kube/config"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/AbdallahHesham44/Ivolve_Training.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('Jenkins/lab23') {
                    sh """
                        docker build -t docker.io/abdallah1312/ivolve:${BUILD_NUMBER} .
                    """
                }
            }
        }

        stage('Push to Docker Hub') {
            steps {
                withDockerRegistry([credentialsId: DOCKER_CREDENTIALS, url: '']) {
                    sh """
                        docker push docker.io/abdallah1312/ivolve:${BUILD_NUMBER}
                    """
                }
            }
        }

        stage('Update Deployment YAML') {
            steps {
                dir('Jenkins/lab23') {
                    sh """
                        if [ -f ${KUBERNETES_DEPLOYMENT_FILE} ]; then
                            sed -i 's|image: .*|image: abdallah1312/ivolve:${BUILD_NUMBER}|' ${KUBERNETES_DEPLOYMENT_FILE}
                        else
                            echo "${KUBERNETES_DEPLOYMENT_FILE} not found!"
                        fi
                    """
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                    oc login https://api.ocp-training.ivolve-test.com:6443 --token=sha256~1yNoQKz-eTYiIC3Ag8MZvqVhr21jsEKSmjdBq7AWEl4 --insecure-skip-tls-verify
                """
                dir('Jenkins/lab23') {
                    sh 'oc apply -f deployment.yaml'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed! Check logs for details.'
        }
        always {
            sh """
                docker rmi docker.io/abdallah1312/ivolve:${BUILD_NUMBER} || true
            """
        }
    }
}
